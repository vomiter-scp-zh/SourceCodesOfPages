ner .list-pages-item iframe{<br />\n&nbsp;&nbsp;background:<br />\n&nbsp;&nbsp;url(' ') center / 110px no-repeat ,radial-gradient( #FFFFFF,#FFFFFF,#FFFFFF,#FFFFFF) center no-repeat;<br />\n&nbsp;&nbsp;border: 0.5em groove #00eeff;<br />\n}<br />\n<br />\n<br />\n<br />\n.goc-out{<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;width: 500px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;height:50em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;padding-bottom: calc(100% / 1.5);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;text-align: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;font-family: '華文新魏';<br />\n}<br />\n<br />\n&nbsp;&nbsp;&nbsp;&nbsp;.goc-out:before{<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;background-image: var(--gocLogo) ;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;background-size: contain;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;background-repeat: no-repeat;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;background-position: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;width: 100%;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;height:inherit;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;position: absolute;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;content: &quot; &quot;;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;top: 16em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;left:0;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;z-index: -1;/*-1 可以当背景*/<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-webkit-filter: opacity(0.2);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;filter:opacity(0.2);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;margin:0 auto;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;}<br />\n<br />\n.goc-in{<br />\n&nbsp;&nbsp;&nbsp;margin:0 auto;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 0 auto;<br />\n&nbsp;&nbsp;&nbsp;font-size: 150%;<br />\n&nbsp;&nbsp;&nbsp;font-weight:bold;<br />\n&nbsp;&nbsp;&nbsp;left:0;<br />\n&nbsp;&nbsp;&nbsp;top: 18em;<br />\n&nbsp;&nbsp;&nbsp;width: 100%;<br />\n&nbsp;&nbsp;&nbsp;position: absolute;<br />\n}<br />\n<br />\n<br />\n.entry-1,.entry-2,.entry-3,.entry-4,.entry-5{<br />\nfont-size: 0%;<br />\nopacity: 0;<br />\n}<br />\n<br />\n.entry-1 {animation-delay: 2s;&nbsp;&nbsp;&nbsp;-webkit-animation-delay:2s; }<br />\n.entry-2 {animation-delay: 6s;&nbsp;&nbsp;&nbsp;-webkit-animation-delay:6s; }<br />\n.entry-3 {animation-delay: 12s; -webkit-animation-delay:12s; }<br />\n.entry-4 {animation-delay: 18s; -webkit-animation-delay:18s; }<br />\n.entry-5 {animation-delay: 24s; -webkit-animation-delay:24s; }<br />\n<br />\n<br />\n<br />\n.record {<br />\n&nbsp;&nbsp;&nbsp;-webkit-animation-name: record;<br />\n&nbsp;&nbsp;&nbsp;animation-name: record-2;<br />\n&nbsp;&nbsp;<br />\n&nbsp;&nbsp;&nbsp;-webkit-animation-duration: 3s;<br />\n&nbsp;&nbsp;&nbsp;animation-duration: 3s;<br />\n}<br />\n<br />\n.record-2{<br />\n&nbsp;&nbsp;&nbsp;-webkit-animation-name: record-2;<br />\n&nbsp;&nbsp;&nbsp;animation-name: record-2;<br />\n&nbsp;&nbsp;<br />\n&nbsp;&nbsp;&nbsp;-webkit-animation-duration: 3s;<br />\n&nbsp;&nbsp;&nbsp;animation-duration: 3s;<br />\n&nbsp;&nbsp;&nbsp;<br />\n&nbsp;&nbsp;-webkit-animation-iteration-count: infinite;<br />\n&nbsp;&nbsp;animation-iteration-count: infinite;<br />\n}<br />\n<br />\n<br />\n<br />\n@keyframes record {<br />\n&nbsp;&nbsp;&nbsp;0% {opacity: 0;font-size: 100%;}<br />\n&nbsp;&nbsp;&nbsp;25% {opacity: 1;font-size: 100%;}<br />\n&nbsp;&nbsp;&nbsp;75% {opacity: 1;font-size: 100%;}<br />\n&nbsp;&nbsp;&nbsp;100% {opacity: 0;font-size: 100%;}<br />\n}<br />\n<br />\n@keyframes record-2 {<br />\n&nbsp;&nbsp;&nbsp;0% {opacity: 0; font-size: 100%;}<br />\n&nbsp;&nbsp;&nbsp;50% {opacity: 1;font-size: 100%;}<br />\n&nbsp;&nbsp;&nbsp;100% {opacity: 0; font-size: 100%;}&nbsp;&nbsp;<br />\n}<br />\n<br />\n[[/module]]\n</div>\n"