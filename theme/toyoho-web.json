 h2:after {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;content: &quot;官方網站&quot;;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-weight: bold;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin: 0 1px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #4d4d4d;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 19px 0;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;text-shadow: 0px 0px 1px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;white-space: pre;<br />\nfont-family: MS ゴシック, PMingLiU, Microsoft JhengHei;<br />\n}<br />\n<br />\n/* Font */<br />\n<br />\n@import url('https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@500&amp;display=swap');<br />\n<br />\n/* Body */<br />\n<br />\n#container #main-content #page-title {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #40806a;<br />\n}<br />\n<br />\n#html-body {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #ffffff;<br />\n}<br />\n<br />\n#page-content .shushuInner h1, h2, h3, h4, h5, h6 {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #40806a;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-family: &quot;ヒラギノ明朝 ProN W6&quot;, &quot;HiraMinProN-W6&quot;, &quot;HG明朝E&quot;, &quot;ＭＳ Ｐ明朝&quot;, &quot;MS PMincho&quot;, &quot;MS 明朝&quot;, serif;<br />\n}<br />\n<br />\na {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #0c8a2d;<br />\n}<br />\n<br />\na:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #0c8a2db0;<br />\n}<br />\n<br />\n#side-bar .side-block a {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #b01;<br />\n}<br />\n<br />\n/* Toyoho */<br />\n<br />\n.toyoho-caption {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;text-align: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-size: 300%;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #5c6662;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-family: '方正姚体';<br />\n}<br />\n<br />\n.toyoho-block {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin: 3em auto;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 1em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #fff;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;box-shadow: 0 0 0 1px #4d9980, 0 0 0 3px #fff, 0 0 0 6px #4d9980;<br />\n}<br />\n<br />\n.toyoho-block .header {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;text-align:center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-size: 200%;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-weight: normal;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #40806a;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-family: &quot;ヒラギノ明朝 ProN W6&quot;, &quot;HiraMinProN-W6&quot;, &quot;HG明朝E&quot;, &quot;ＭＳ Ｐ明朝&quot;, &quot;MS PMincho&quot;, &quot;MS 明朝&quot;, serif;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin: 0 0 0.6em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border-bottom: 1px solid #bbb;<br />\n}<br />\n<br />\n.toyoho-notice-b {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;display: flex;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;flex-direction: row;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;justify-content: space-between;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin-top: 1em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin-bottom: 2em;<br />\n}<br />\n<br />\n.toyoho-notice {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;width: 40%;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 1.5em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(7,124,39,0.5) 100%);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;box-shadow: 3px 5px 7px rgba(0,0,0,.5);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;box-sizing: border-box;<br />\n}<br />\n<br />\n@media (max-width: 480px) {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;.toyoho-notice-b {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;display: block;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;}<br />\n<br />\n&nbsp;&nbsp;&nbsp;&nbsp;.toyoho-notice {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;float: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;width: 100%;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;margin-top: 1em;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;}<br />\n}<br />\n<br />\n.otoiawase {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;text-align: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border: solid 2px #000000;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 1px 15px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;box-shadow: 0 1px 3px rgba(0,0,0,.2);<br />\n}<br />\n<br />\n/* Rate＆Credit */<br />\n<br />\n#container .page-rate-widget-box {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border-radius: 0;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #DDD;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;height: 18px;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .rate-points{<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #666 !important;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #FFF;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-weight: bold;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 0 10px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border-radius: 0;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .rateup, #container .page-rate-widget-box .ratedown {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: transparent;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;height: 18px;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .rateup a:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #028760;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .ratedown a:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #e2041b;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .cancel a:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border-radius:0;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #0095d9;<br />\n}<br />\n<br />\n#container .page-rate-widget-box a{<br />\n&nbsp;&nbsp;&nbsp;&nbsp;text-decoration: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #000;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 0 5px;<br />\n}<br />\n<br />\n#container .page-rate-widget-box a:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #DDD;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .cancel, .page-rate-widget-box .cancel a {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;-moz-border-radius:&nbsp;&nbsp;0;<br />\n}<br />\n<br />\n#container .page-rate-widget-box .cancel {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: transparent;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;padding: 0 2px;<br />\n}<br />\n<br />\n#page-content&nbsp;&nbsp;.rate-box-with-credit-button .creditButton {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;display: inline-flex;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;justify-content: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;align-items: center;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;width: 24px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;height: 18px;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;background-color: #666;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border: none;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;border-radius: 0;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;box-shadow: 1px 1px 3px rgb(0 0 0 / 50%);<br />\n&nbsp;&nbsp;&nbsp;&nbsp;margin-left: 0;<br />\n}<br />\n<br />\n#page-content&nbsp;&nbsp;.rate-box-with-credit-button .creditButton a:hover {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;font-size: large;<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #fff;<br />\n}<br />\n<br />\n.modalbox .modalbox-title h2 {<br />\n&nbsp;&nbsp;&nbsp;&nbsp;color: #333;<br />\n}<br />\n<br />\n[[/code]]<br />\n<br />\n[[/iftags]]\n</div>\n"